<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false"
    android:background="#AED2FF"
    android:orientation="vertical"
    android:verticalScrollbarPosition="left">

    <include layout="@layout/topbar" />

    <AutoCompleteTextView
        android:id="@+id/StartPoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/border_radius"
        android:textColor="#000000"
        android:ems="10"
        android:hint="출발지"
        android:textColorHint="@color/black"
        android:inputType="text"
        android:padding="5dp" />

    <AutoCompleteTextView
        android:id="@+id/EndPoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/border_radius"
        android:textColor="#000000"
        android:ems="10"
        android:hint="도착지"
        android:textColorHint="@color/black"
        android:inputType="text"
        android:padding="5dp" />

    <Button
        android:id="@+id/MapPoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#27005D"
        android:text="여행경로만들기"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rg">
        <RadioButton
            android:id="@+id/nature_check"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:text="자연관광"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:buttonTint="#000000"/>

        <RadioButton
            android:id="@+id/leisure_check"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:text="레저관광"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:buttonTint="#000000"/>

        <RadioButton
            android:id="@+id/culture_check"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:text="문화관광"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:buttonTint="#000000"/>
    </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7E1D1D"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/todayRecommandText"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:background="@color/material_dynamic_primary90"
                android:gravity="center"
                android:text="오늘의 나들이"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/refreshBtn"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/material_dynamic_primary90"
                android:src="@drawable/replay" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/gray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/recommandImgBtn1"
                    android:layout_width="match_parent"
                    android:layout_height="176dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/recommandText1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="loading...."
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/recommandImgBtn2"
                    android:layout_width="match_parent"
                    android:layout_height="176dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/recommandText2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>
        </ScrollView>

        <include
            layout="@layout/bottombar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center"
            android:layout_weight="8" />
    </LinearLayout>

</LinearLayout>
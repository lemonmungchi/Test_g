<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false"
    android:background="#AED2FF"
    android:orientation="vertical"
    android:verticalScrollbarPosition="left">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/loginMy"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:gravity="center"
            android:text="로그인"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFF0"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/reviewManagementBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_radius"
                        android:padding="20dp"
                        android:text="리뷰 관리"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:icon="@drawable/speaker_notes" />

                    <Button
                        android:id="@+id/bookmarkBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_radius"
                        android:padding="20dp"
                        android:text="좋아한 관광지"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:icon="@drawable/emptyheart" />

                    <Button
                        android:id="@+id/privacyBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/border_radius"
                        android:padding="20dp"
                        android:text="로그아웃"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:icon="@android:drawable/ic_secure" />

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <include
        layout="@layout/bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_weight="8" />

</LinearLayout>